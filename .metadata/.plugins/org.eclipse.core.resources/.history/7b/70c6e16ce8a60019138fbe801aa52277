package newPOM;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.annotations.Test;

public class generalPage {
	
	WebDriver driver;

	public generalPage(WebDriver driver) {
		this.driver = driver;
	}
	
  public void masterpageSetting() {
	  //Click on actions list
	  driver.findElement(By.cssSelector("[name='fInboxControl$fCbxUpAction']")).click();
	  //Wait for element is display
	  WebDriverWait waitTitle = new WebDriverWait(driver, 15);
	  waitTitle.until(ExpectedConditions.visibilityOfElementLocated(By.cssSelector("[name='fInboxControl$fCbxUpAction']")));
	  //Chooses Master Page Setting
	  driver.findElement(By.xpath("[contains(text(), 'Master Page Settings')]")).click();
	  //Click Oke
	  driver.findElement(By.id("fInboxControl_btnUpGo")).click();
	  
  }
}
